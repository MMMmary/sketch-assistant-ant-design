{
  "name": "sketch-assistant-ant-design",
  "homepage": "https://github.com/arvinxx/sketch-assistant-ant-design",
  "version": "0.1.0",
  "main": "dist/index.js",
  "sketch": "dist/sketch.js",
  "license": "MIT",
  "sketch-assistant": {
    "title": "Ant Design Sketch Assistant",
    "description": "fit your design to Ant Design",
    "icon": "https://gw.alipayobjects.com/zos/antfincdn/yrDfV%24x7%26j/antd.png"
  },
  "author": {
    "name": "arvinxx(arvinx@foxmail.com)"
  },
  "keywords": [
    "sketch",
    "sketch files",
    "sketch assistant",
    "public",
    "ant design",
    "assistant",
    "design ops"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest --no-cache",
    "test:coverage": "jest --coverage",
    "build": "rm -rf dist && npm run build:node && npm run build:sketch",
    "build:node": "tsc",
    "build:sketch": "webpack",
    "---------": "",
    "package": "npm run build && npm pack",
    "release:local": "npm run package",
    "release:online": "npm publish",
    "prepublishOnly": "npm run test && npm run package && np --no-cleanup --yolo --no-publish --any-branch",
    "--------- ": "",
    "lint": "npm run lint-eslint",
    "tsc": "tsc -p tsconfig-check.json",
    "lint-eslint": "eslint --cache --ext .js,.jsx,.ts,.tsx ./src",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --cache --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx ",
    "prettier": "prettier -c --write \"**/**\""
  },
  "lint-staged": {
    "**/*.less": "stylelint --syntax less",
    "**/*.{js,jsx,tsx,ts,md,json}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js,ts,tsx}": "npm run lint-staged:js"
  },
  "devDependencies": {
    "@sketch-hq/sketch-assistant-utils": "6.0.0",
    "@types/jest": "26.0.4",
    "@types/node": "14.0.22",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "@umijs/fabric": "^2.2.2",
    "jest": "26.1.0",
    "node-fetch": "2.6.0",
    "np": "^6.5.0",
    "prettier": "2.0.5",
    "ts-jest": "26.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.9.6",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.12"
  },
  "dependencies": {
    "@sketch-hq/sketch-assistant-types": "6.0.0"
  }
}
